{% macro content(spec) %}

{% set spec = spec or {} %}
{% set _class = spec.class or '' %}

<div class="smTag animate {{spec.class}}">
  <div class="smTag-img">
    <img class="smTag-img_img" src="{{spec.img}}" alt="">
  </div>
  <div class="smTag-info">
    <h3 class="smTag-info_title">{{spec.title}}</h3>
    <p class="smTag-info_text">{{spec.subtitle}}</p>
  </div>
</div>
{% endmacro %}
